<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/editTestsBtn"
        android:layout_width="80dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/main_btn_color"
        android:text="Edit"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="88dp" />

    <Button
        android:id="@+id/addTestsBtn"
        android:layout_width="294dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/main_btn_color"
        android:text="Add"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="603dp" />

    <include
        android:id="@+id/container_header_lyt"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        layout="@layout/top_nav"
        />

    <TextView
        android:layout_width="193dp"
        android:layout_height="53dp"
        android:text="Pet 1's Tests"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="143dp" />

    <LinearLayout
        android:id="@+id/petTestsLayout"
        android:layout_width="346dp"
        android:layout_height="367dp"
        android:layout_marginStart="32dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="218dp">
    <LinearLayout
        android:id="@+id/testsLayoutField"
        android:layout_width="350dp"
        android:layout_height="171dp"
        android:layout_marginEnd="16dp"
        android:background="@color/box_color"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="204dp">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="39dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="204dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="@color/black"
                android:textSize="22dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="206dp" />

            <TextView
                android:id="@+id/pprevNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="119dp"
                tools:layout_editor_absoluteY="206dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="39dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="204dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textColor="@color/black"
                android:textSize="22dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="206dp" />

            <TextView
                android:id="@+id/pprevDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="119dp"
                tools:layout_editor_absoluteY="206dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="39dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="204dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Results:"
                android:textColor="@color/black"
                android:textSize="22dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="206dp" />

            <TextView
                android:id="@+id/resultsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="results"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="119dp"
                tools:layout_editor_absoluteY="206dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="39dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="204dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treatment:"
                android:textColor="@color/black"
                android:textSize="22dp"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="206dp" />

            <TextView
                android:id="@+id/treatmentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="treatment"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="119dp"
                tools:layout_editor_absoluteY="206dp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>