        app:layout_constraintHorizontal_bias="0.819"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="571dp" />

    <Button
        android:id="@+id/medBtn"
        android:layout_width="151dp"
        android:layout_height="53dp"
